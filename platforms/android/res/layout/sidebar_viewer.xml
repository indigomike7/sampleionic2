<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="100dp"
              android:orientation="horizontal" android:background="@color/sidebar_viewer_background">

    <com.younetco.toolbox.SmartImageView
            android:id="@+id/sidebar_menu_icon"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:padding="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/avatar_default"
            android:scaleType="centerCrop"/>

    <TextView
            android:id="@+id/sidebar_menu_label"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="Medium Text"
            android:textAppearance="@android:style/TextAppearance.Medium" android:textStyle="bold"
            android:textColor="@drawable/sidebar_text_selector"/>

</LinearLayout>